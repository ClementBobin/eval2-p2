<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Template" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_diiage</item>
        <item name="colorOnPrimary">@color/neutral_100</item>
        <item name="colorPrimaryContainer">@color/blue_800</item>
        <item name="colorOnPrimaryContainer">@color/blue_200</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/yellow_diiage</item>
        <item name="colorOnSecondary">@color/neutral_1000</item>
        <item name="colorSecondaryContainer">@color/yellow_800</item>
        <item name="colorOnSecondaryContainer">@color/yellow_200</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/sky_diiage</item>
        <item name="colorOnTertiary">@color/neutral_1000</item>
        <item name="colorTertiaryContainer">@color/sky_800</item>
        <item name="colorOnTertiaryContainer">@color/sky_200</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">#FF121212</item>
        <item name="colorOnBackground">@color/neutral_100</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/neutral_900</item>
        <item name="colorOnSurface">@color/neutral_100</item>
        <item name="colorSurfaceVariant">@color/neutral_800</item>
        <item name="colorOnSurfaceVariant">@color/neutral_400</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/neutral_700</item>
        <item name="colorOutlineVariant">@color/neutral_800</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>
        <item name="colorErrorContainer">@color/error_container_dark</item>
        <item name="colorOnErrorContainer">@color/on_error_container_dark</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_diiage</item>
        <item name="android:navigationBarColor">@color/neutral_900</item>

        <!-- Window Background -->
        <item name="android:windowBackground">#FF121212</item>
    </style>
</resources>